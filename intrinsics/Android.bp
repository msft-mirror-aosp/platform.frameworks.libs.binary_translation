            export_generated_headers: [
                "libberberis_intrinsics_gen_inline_headers_riscv64_to_x86_64",
                "libberberis_intrinsics_gen_public_headers_riscv64_to_x86_64",
            ],
            export_include_dirs: [
                "riscv64_to_x86_64/include",
                "riscv64/include",
            ],
        },
    },
}

